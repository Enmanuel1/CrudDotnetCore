@model Employee
</br>
<h1>Crear empleados</h1>
<form asp-action="Create" method="POST">
    <div class="form-group">
        <label for="Nombre" class="col-sm-2 col-form-label">Nombre:</label>
        <input asp-for="Name" id="Nombre" placeholder="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Edad" class="col-sm-2 col-form-label">Edad:</label>
        <input asp-for="Age" id="Edad" placeholder="Edad" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Position" class="col-sm-2 col-form-label">Posicion:</label>
        <input asp-for="Position" id="Position" placeholder="Posicion" class="form-control" />
    </div>
    <div class="form-group">
        <label for="fecha" class="col-sm-2 col-form-label">Fecha de ingreso:</label>
        <input type="date" id="fecha" asp-for="CreatedAt" placeholder="Fecha de ingreso" class="form-control" />
    </div>
    <input type="submit" value="Guardar"  class="btn btn-primary"/>
</form>